extends layout

block content

   h1 #{title}: #{genre.name}

   - console.log(author_books)
   if author_books.length

      p #[strong Delete the following books before attempting to delete this genre.]

         div.ml-3.mt-3
            h4 Books

            dl
            each book in author_books
               dt
                  a(href=book.url) #{book.title}
               dd #{book.summary}

   else 
         p Do you really want to delete this Genre?

         form(method="POST" action="")
            div.form-group
               input#genre_id.form-control(type="hidden" name="genre_id" required value=genre._id)
         
            button.btn.btn-danger(type="submit") Delete